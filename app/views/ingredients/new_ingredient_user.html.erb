
<h1>Add Ingredient</h1>


<%= form_tag("/users/create_ingredient_user", :method => "post") do %>
    <p>
      Name:
      <%= text_field_tag  :name %>
    </p>

    <p>
      Picture Link:
      <%= text_field_tag :picture %>
    </p>
    <p>
      Amount
      <%= text_field_tag :amount %>
    </p>

    <p>
      <%= label_tag :date %>
        <%= text_field_tag :date %>
    </p>
    <p>
      <%= submit_tag 'Create' %>
    </p>
<% end %>