<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  


  <div class="span8">
    <% if @user.recipes.any? %>
        <h3>Recipes (<%= @user.recipes.count %>)</h3>
        <ol>
          <%= render @recipes %>
        </ol>
        <%= will_paginate @recipes %>
    <% end %>
  </div>
</div>